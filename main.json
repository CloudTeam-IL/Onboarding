{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "gitURI": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/CloudTeam-IL/Onboarding/dev",
            "metadata": {
                "description": "Official Git repo for CloudTeam.AI onboarding process."
            }
        },
        "proactivePrincipalID": {
            "type": "string",
            "defaultValue": "ef564843-294d-48c0-b957-9f93b46ce48a",
            "metadata": {
                "description": "CloudTeam.AI Proactive Agent Principal ID"
            }
        },
        "readersPrincipalID": {
            "type": "string",
            "defaultValue": "c4ee51f4-2fb9-46b7-bd9c-050926b69726",
            "metadata": {
                "description": "CloudTeam.AI Readers Agent Principal ID"
            }
        }
    },
    "variables": {
        "APIs": {
            "API": "2021-04-01",
            "policyAPI": "2019-09-01",
            "remidiationAPI": "2021-10-01",
            "roleAssignmentAPI": "2020-10-01-preview"
        },
        "policyName": "CloudTeam.AI FinOps",
        "CloudTeamTenantID": "667d9faa-186f-4608-8a36-cf595f0350fb",
        "ownerRBAC": "8e3af657-a8ff-443c-a75c-2fe8c4bcb635",
        "location": "[deployment().location]",
        "MGID": "[managementGroup().id]",
        "gitURI": "[if(endsWith(parameters('gitURI'), '/'), parameters('gitURI'), concat(parameters('gitURI'), '/'))]",
        "templatesProperties": {
            "contentVersion": "1.0.0.0",
            "defaultMode": "Incremental",
            // "initializeTemplateURI": "[concat(variables('gitURI'), 'initialize/initialize.json')]",
            "onboardingTemplateURI": "[concat(variables('gitURI'), 'onboarding/onboarding.json')]"
            // "finalizeTemplateURI": "[concat(variables('gitURI'), 'finalize/finalize.json')]"
        },
        "templatesNames": {
            // "initializeTemplateName": "[first(split(last(split(variables('templatesProperties').initializeTemplateURI, '/')), '.'))]",
            "onboardingTemplateName": "[first(split(last(split(variables('templatesProperties').onboardingTemplateURI, '/')), '.'))]"
            // "finalizeTemplateName": "[first(split(last(split(variables('templatesProperties').finalizeTemplateURI, '/')), '.'))]"
        }
    },
    "resources": [
        // {
        //     "type": "Microsoft.Resources/deployments",
        //     "name": "[variables('templatesNames').initializeTemplateName]",
        //     "location": "[variables('location')]",
        //     "apiVersion": "[variables('APIs').API]",
        //     "properties": {
        //         "mode": "[variables('templatesProperties').defaultMode]",
        //         "templateLink": {
        //             "contentVersion": "[variables('templatesProperties').contentVersion]",
        //             "uri": "[variables('templatesProperties').initializeTemplateURI]"
        //         },
        //         "parameters": {
        //             "gitURI": {
        //                 "value": "[concat(variables('gitURI'), 'initialize/')]"
        //             },
        //             "location": {
        //                 "value": "[variables('location')]"
        //             },
        //             "MGID": {
        //                 "value": "[variables('MGID')]"
        //             }
        //         }
        //     }
        // },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('templatesNames').onboardingTemplateName]",
            "apiVersion": "[variables('APIs').API]",
            "location": "[variables('location')]",
            "properties": {
                "mode": "[variables('templatesProperties').defaultMode]",
                "templateLink": {
                    "contentVersion": "[variables('templatesProperties').contentVersion]",
                    "uri": "[variables('templatesProperties').onboardingTemplateURI]"
                },
                "parameters": {
                    "gitURI": {
                        "value": "[concat(variables('gitURI'), 'onboarding/')]"
                    },
                    "proactivePrincipalID": {
                        "value": "[parameters('proactivePrincipalID')]"
                    },
                    "readersPrincipalID": {
                        "value": "[parameters('readersPrincipalID')]"
                    },
                    "policyName": {
                        "value": "[variables('policyName')]"
                    },
                    "managedByTenantID": {
                        "value": "[variables('CloudTeamTenantID')]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    },
                    // "billingExportRoleDefID": {
                    //     "value": "[reference(variables('templatesNames').initializeTemplateName, variables('APIs').API).outputs.billingExportRoleDefID.value]"
                    // },
                    "MGID": {
                        "value": "[variables('MGID')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "name": "[variables('policyName')]",
            "location": "[variables('location')]",
            "apiVersion": "[variables('APIs').policyAPI]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', variables('templatesNames').onboardingTemplateName)]"
            ],
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "enforcementMode": "Default",
                "scope": "[variables('MGID')]",
                "displayName": "[variables('policyName')]",
                "policyDefinitionId": "[reference(variables('templatesNames').onboardingTemplateName, variables('APIs').API).outputs.policyDefID.value]"
            }
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "[variables('APIs').roleAssignmentAPI]",
            "name": "[guid(variables('ownerRBAC'), variables('MGID'), reference(resourceId('Microsoft.Authorization/policyAssignments', variables('policyName')), variables('APIs').policyAPI, 'full').identity.principalId)]",
            "scope": "[variables('MGID')]",
            "dependsOn": [
                "[resourceId('Microsoft.Authorization/policyAssignments', variables('policyName'))]"
            ],
            "properties": {
                "principalId": "[reference(resourceId('Microsoft.Authorization/policyAssignments', variables('policyName')), variables('APIs').policyAPI, 'full').identity.principalId]",
                "roleDefinitionId": "[variables('ownerRBAC')]"
            }
        }
    ],
    "outputs": {}
}