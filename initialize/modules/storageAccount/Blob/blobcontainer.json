{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Specifies the name of the storage account."
            }
        },
        "containerNames": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description": "Specifies the name of the blob container."
            }
        },
        "publicAccessMode": {
            "type": "string",
            "defaultValue": "None",
            "allowedValues": [
                "None",
                "Blob",
                "Container"
            ],
            "metadata": {
                "description": "Public Access Mode for the blob container"
            }
        }
    },
    "variables": {
        "storageAccountsAPI": "2021-08-01"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices",
            "apiVersion": "[variables('storageAccountsAPI')]",
            "name": "[concat(parameters('storageAccountName') ,'/default')]",
            "properties": {
                "lastAccessTimeTrackingPolicy": {
                    "enable": true,
                    "name": "AccessTimeTracking",
                    "trackingGranularityInDays": 1,
                    "blobType": [
                        "blockBlob"
                    ]
                }
            }
        },
        {
            "name": "[concat(parameters('storageAccountName'), '/default/', parameters('containerNames')[copyIndex()])]",
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "[variables('storageAccountsAPI')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountName'), 'default')]"
            ],
            "properties": {
                "publicAccess": "[parameters('publicAccessMode')]"
            },
            "copy":{
                "name": "cloop",
                "count": "[length(parameters('containerNames'))]"
            }
        }
    ]
}