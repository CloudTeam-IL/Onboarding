{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "list": {
            "type": "array",
            "metadata": {
                "description": "List of role definitions"
            }
        }
    },
    "variables": {
        "roleDefAPI": "2018-01-01-preview"
        // "copy": [
        //     {
        //         "name": "permissions",
        //         "count": "[length(parameters('permissions'))]",
        //         "input": [
        //             {
        //                 "actions": "[if(contains(parameters('permissions')[copyIndex()], 'actions'), parameters('permissions')[copyIndex()].actions, json('null'))]",
        //                 "dataActions": "[if(contains(parameters('permissions')[copyIndex()], 'dataActions'), parameters('permissions')[copyIndex()].dataActions, json('null'))]",
        //                 "notActions": "[if(contains(parameters('permissions')[copyIndex()], 'notActions'), parameters('permissions')[copyIndex()].notActions, json('null'))]",
        //                 "notDataActions": "[if(contains(parameters('permissions')[copyIndex()], 'notDataActions'), parameters('permissions')[copyIndex()].notDataActions, json('null'))]"
        //             }
        //         ]
        //     }
        // ]
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleDefinitions",
            "apiVersion": "[variables('roleDefAPI')]",
            "name": "[guid(tenant().tenantId, parameters('list')[copyIndex()].roleName)]",
            "properties": {
                "roleName": "[parameters('list')[copyIndex()].roleName]",
                "type": "[if(not(empty(parameters('list')[copyIndex()].roleName)), parameters('list')[copyIndex()].roleName,'customRole')]",
                "assignableScopes": "[if(not(empty(parameters('list')[copyIndex()].assignableScopes)), parameters('list')[copyIndex()].assignableScopes, json('null'))]",
                "description": "[if(not(empty(parameters('list')[copyIndex()].description)), parameters('list')[copyIndex()].description, json('null'))]",
                "permissions": "[if(not(empty(parameters('list')[copyIndex()].permissions)), parameters('list')[copyIndex()].permissions, json('null'))]"
            },
            "copy": {
                "name": "rdcopy",
                "count": "[length(parameters('list'))]"
            }
        }
    ],
    "outputs": {
        "roleDefResourceID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Authorization/roleDefinitions', guid(tenant().tenantId, parameters('list')[copyIndex()].roleName))]"
        },
        "roleDefName": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Authorization/roleDefinitions', guid(tenant().tenantId, parameters('list')[copyIndex()].roleName)).name)]"
        },
        "billingExportRoleDefID": {
            "type": "string",
            "condition": "[equals(parameters('list').roleName, 'Cost Management Export')]",
            "value": "[reference(resourceId('Microsoft.Authorization/roleDefinitions', guid(tenant().tenantId, parameters('list')[copyIndex()].roleName))).outputs.billingExportRoleDefID.value]"
        }
    }
}