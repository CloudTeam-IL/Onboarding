{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "list": {
            "type": "object",
            "metadata": {
                "description": "Role definitions"
            }
        }
    },
    "variables": {
        "roleDefAPI": "2018-01-01-preview"
        // "copy": [
        //     {
        //         "name": "permissions",
        //         "count": "[length(parameters('permissions'))]",
        //         "input": [
        //             {
        //                 "actions": "[if(contains(parameters('permissions'), 'actions'), parameters('permissions').actions, json('null'))]",
        //                 "dataActions": "[if(contains(parameters('permissions'), 'dataActions'), parameters('permissions').dataActions, json('null'))]",
        //                 "notActions": "[if(contains(parameters('permissions'), 'notActions'), parameters('permissions').notActions, json('null'))]",
        //                 "notDataActions": "[if(contains(parameters('permissions'), 'notDataActions'), parameters('permissions').notDataActions, json('null'))]"
        //             }
        //         ]
        //     }
        // ]
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleDefinitions",
            "apiVersion": "[variables('roleDefAPI')]",
            "name": "[guid(tenant().tenantId, parameters('list').roleName)]",
            "properties": {
                "roleName": "[parameters('list').roleName]",
                "type": "[if(not(empty(parameters('list').roleName)), parameters('list').roleName,'customRole')]",
                "assignableScopes": "[if(not(empty(parameters('list').assignableScopes)), parameters('list').assignableScopes, json('null'))]",
                "description": "[if(not(empty(parameters('list').description)), parameters('list').description, json('null'))]",
                "permissions": "[if(not(empty(parameters('list').permissions)), parameters('list').permissions, json('null'))]"
            }
        }
    ],
    "outputs": {
        "roleDefResourceID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Authorization/roleDefinitions', guid(tenant().tenantId, parameters('list').roleName))]"
        },
        "roleDefName": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Authorization/roleDefinitions', guid(tenant().tenantId, parameters('list').roleName)).name)]"
        },
        "billingExportRoleDefID": {
            "type": "string",
            "condition": "[equals(parameters('list').roleName, 'Cost Management Export')]",
            "value": "[reference(resourceId('Microsoft.Authorization/roleDefinitions', guid(tenant().tenantId, parameters('list').roleName))).outputs.billingExportRoleDefID.value]"
        }
    }
}